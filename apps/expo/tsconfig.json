{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "ESNEXT"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src", "env.ts", "index.js", "app.config.js"],
  "exclude": ["node_modules", "../../node_modules", "environments"]
}
